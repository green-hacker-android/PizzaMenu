<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Resumen"
        android:background="@color/colorPrimary">

    <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/cardResizable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35000002">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/outline_done_white_48"
                android:id="@+id/tickResumenFinal"
                android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>
    <Button
            android:text="@string/back_to_init_button_label"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/cardResizable"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"
            style="@style/Widget.AppCompat.Button"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:elevation="0dp"
            android:onClick="submitButton"/>
</android.support.constraint.ConstraintLayout>